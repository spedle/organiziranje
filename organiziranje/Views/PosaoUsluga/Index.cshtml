@model IEnumerable<organiziranje.Models.posao_usluga>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Grad
        </th>
        <th>
            Lokacija
        </th>
        <th>
            Usluga
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.posao.grad, "Details", "Posao", new { id = item.posao.id }, null);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.posao.lokacija)
        </td>
        <td>
            @Html.ActionLink(item.usluga.usluga_kategorija.naziv, "Details", "Usluga", new { id = item.usluga.id }, null);
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
