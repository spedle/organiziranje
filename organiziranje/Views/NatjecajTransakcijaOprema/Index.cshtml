@model IEnumerable<organiziranje.Models.natjecaj_transakcija_oprema>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            ID natjecaja
        </th>
        <th>
            Pobjednik
        </th>
        <th>
            Raspisao
        </th>
        <th>
           Broj opreme
        </th>
        <th>
            Naziv opreme
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.natjecaj.id)
        </td>
        <td>
            @Html.ActionLink(item.natjecaj.pobjednik, "Details", "Natjecaj", new { id = item.natjecaj.id }, null);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.natjecaj.raspisala_osoba)
        </td>
        <td>
            @Html.ActionLink(item.transakcija_oprema.oprema.inventarni_broj, "Details", "Oprema", new { id = item.transakcija_oprema.oprema.id }, null);
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.transakcija_oprema.oprema.naziv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
